<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primaryColor">

<LinearLayout
    android:paddingVertical="20sp"
    android:layout_weight="0.9"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/ll_info_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:background="#90E4E2E2">

        <LinearLayout
            android:id="@+id/ll_title_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_title_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFORMACIÓN PERSONAL"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="15dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="0.8">

                <LinearLayout android:id="@+id/title_info_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/tv_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombres:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_title_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apellidos:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_title_num_identification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Identificación:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genero:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout android:id="@+id/valores_info_person"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan Fernando"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_lastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Romero Ortega"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_num_identification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.090.502.664"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv__gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hombre"
                        android:layout_marginBottom="5dp">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2">
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_supervisor_account"
                    android:layout_gravity="center">
                </ImageView>
            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_empleyees"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:background="#90E4E2E2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFORMACIÓN EMPRESARIAL"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="15dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="0.8">

                <LinearLayout android:id="@+id/ll_title_info_empresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView android:id="@+id/tv_title_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rol:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_title_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_title_contract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contrato:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_title_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salario:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_title_installation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Dependencia:"></TextView>
                    <TextView android:id="@+id/tv_title_date_admission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingreso:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_title_date_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salida:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout android:id="@+id/ll_valores_info_empresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="left">

                    <TextView android:id="@+id/tv_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rol"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_contract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contrato"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salario"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_installation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Dependencia"></TextView>
                    <TextView android:id="@+id/tv_date_admission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingreso: "
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_date_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salida: "
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView android:id="@+id/tv_assigned_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver articulos asignados"
                        android:layout_marginBottom="5dp">
                    </TextView>
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2">
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_supervisor_account"
                    android:layout_gravity="center">
                </ImageView>
            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_empleyees"
        android:id="@+id/ll_installations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:background="#90E4E2E2"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFORMACIÓN DE CONTACTO"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textAlignment="center">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_weight="0.8"
                android:paddingTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp">

                <LinearLayout android:id="@+id/ll_title_info_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_num_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="       Telefono:">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_num_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movil:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout android:id="@+id/ll_valores_info_contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/tv_valor_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-mail:"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_valor_num_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Telefono:">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_valor_num_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Movil:"
                        android:layout_marginBottom="5dp">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2">
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_instalations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_room"
                    android:layout_gravity="center">
                </ImageView>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/btt_dissmis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESPEDIR"
            android:paddingHorizontal="20dp"
            android:background="@color/secondaryColor"
            android:layout_gravity="center"
            android:layout_marginRight="30dp">
        </Button>
        <Button
            android:id="@+id/btt_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INHABILITAR"
            android:paddingHorizontal="20dp"
            android:background="@color/secondaryColor"
            android:layout_gravity="center">
        </Button>
    </LinearLayout>



</LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_add_tool_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15sp"
        android:src="@drawable/add"
        app:backgroundTint="@color/editTextColorWhite">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</LinearLayout>