<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_pig"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    android:background="#53292929">
    <ImageView
        android:id="@+id/imagenPig"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cardview"
        android:background="@drawable/lechon_modificado"
        android:scaleType="centerCrop">
    </ImageView>
    <TextView
        android:id="@+id/idPig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idPig"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_cardview"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">
    </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/padding_cardview"
            android:paddingBottom="@dimen/padding_cardview">

            <TextView
                android:id="@+id/etapaPig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etapaPig"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_cardview">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pesoPig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pesoPig"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_cardview"
                    android:layout_weight="0.5"
                    android:paddingLeft="10dp"
                    android:background="@drawable/custom_button">
                </TextView>
                <TextView
                    android:id="@+id/sexoPig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sexoPig"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_cardview"
                    android:layout_weight="0.5"
                    android:paddingLeft="150dp">

                </TextView>
            </LinearLayout>


        </LinearLayout>
</com.google.android.material.card.MaterialCardView>



