<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_employee"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#53292929"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/imagenPIg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_cardview"
            android:background="@drawable/lechon"
            android:scaleType="centerCrop">
        </ImageView>
        <TextView
            android:id="@+id/idPig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idPig"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_cardview"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/padding_cardview"
            android:paddingBottom="@dimen/padding_cardview">

            <TextView
                android:id="@+id/etapaPig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etapaPig"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_cardview">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pesoPig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pesoPig"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_cardview"
                    android:layout_weight="0.5">
                </TextView>
                <TextView
                    android:id="@+id/sexoPig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sexoPig"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_cardview"
                    android:textAlignment="textEnd"
                    android:layout_weight="0.5"
                    android:layout_gravity="end">

                </TextView>
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>



