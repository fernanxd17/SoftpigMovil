<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_infofer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@color/secondaryLightColor"
            android:text="@string/app_info_fertilidad"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/bt_infoproducrepro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@color/secondaryLightColor"
            android:text="@string/app_info_productividad_reproductoras"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/bt_infoproduc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@color/secondaryLightColor"
            android:text="@string/app_info_produccion"
            android:textSize="15dp">

        </Button>
    </LinearLayout>


</LinearLayout>