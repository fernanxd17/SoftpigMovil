<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.InformeGeneralFragment"
    android:background="@drawable/general_report">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_radius"
            android:layout_marginTop="50dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center_vertical">

            <RelativeLayout android:id="@+id/rl_pig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:paddingTop="20sp">

                <ImageView android:id="@+id/iv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/data"/>

                <TextView android:id="@+id/title_datos_porcino"
                    android:layout_toRightOf="@id/iv_home"
                    android:layout_alignBottom="@id/iv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos de la granja"
                    android:layout_marginLeft="10sp"
                    android:textSize="30sp"/>

                <LinearLayout android:id="@+id/ll_title_datos_pig"
                    android:layout_toRightOf="@id/iv_home"
                    android:layout_alignLeft="@id/title_datos_porcino"
                    android:layout_below="@id/title_datos_porcino"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total cerdos"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total machos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total hembras"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>
                    <TextView android:id="@+id/tv_graf_cerdos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver grafica"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_button"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verracos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hembras activas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>
                    <TextView android:id="@+id/tv_graf_reproductores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver grafica"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_button" />
                </LinearLayout>

                <LinearLayout android:id="@+id/ll_valores_datos_pig"
                    android:layout_toRightOf="@id/ll_title_datos_pig"
                    android:layout_below="@id/title_datos_porcino"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:id="@+id/tv_total_cerdos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"/>
                    <TextView android:id="@+id/tv_total_machos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>
                    <TextView android:id="@+id/tv_total_hembras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>
                    <TextView android:id="@+id/tv_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>
                    <TextView android:id="@+id/tv_total_male_rep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>
                    <TextView android:id="@+id/tv_total_female_rep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>


                <ImageView android:id="@+id/iv_etapa_pig"
                    android:layout_below="@+id/ll_title_datos_pig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pig_report"
                    android:layout_marginTop="20sp"/>

                <TextView android:id="@+id/title_etapas_pig"
                    android:layout_toRightOf="@id/iv_etapa_pig"
                    android:layout_alignBottom="@id/iv_etapa_pig"
                    android:layout_alignLeft="@id/ll_title_datos_pig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Etapas de crecimiento"
                    android:textSize="30sp"/>

                <LinearLayout android:id="@+id/ll_title_etapas_pig"
                    android:layout_toRightOf="@id/iv_etapa_pig"
                    android:layout_alignLeft="@id/title_etapas_pig"
                    android:layout_below="@id/title_etapas_pig"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lechones"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marranos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"/>

                    <TextView android:id="@+id/tv_graf_etapas"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Ver grafica"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/custom_button"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout android:id="@+id/ll_valores_etapas_pig"
                    android:layout_toRightOf="@id/ll_title_etapas_pig"
                    android:layout_below="@id/title_etapas_pig"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignLeft="@id/ll_valores_datos_pig">
                    <TextView android:id="@+id/tv_lechones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"/>
                    <TextView android:id="@+id/tv_marranos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"/>

                </LinearLayout>

                <ImageView android:id="@+id/iv_fertilidad"
                    android:layout_below="@+id/ll_title_etapas_pig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heat"
                    android:layout_marginTop="20sp"/>

                <TextView android:id="@+id/title_fertilidad"
                    android:layout_toRightOf="@id/iv_fertilidad"
                    android:layout_alignBottom="@id/iv_fertilidad"
                    android:layout_alignLeft="@id/ll_title_etapas_pig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fertilidad"
                    android:textSize="30sp"/>

                <LinearLayout android:id="@+id/ll_title_fertilidad"
                    android:layout_toRightOf="@id/iv_fertilidad"
                    android:layout_alignLeft="@id/title_fertilidad"
                    android:layout_below="@id/title_fertilidad"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promedio partos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promedio celos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promedio gestaciones"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="5dp"/>

                    <TextView android:id="@+id/tv_graf_fertilidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver grafica"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/custom_button"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/ll_valores_fertilidad"
                    android:layout_toRightOf="@id/ll_title_fertilidad"
                    android:layout_below="@id/title_fertilidad"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignLeft="@id/ll_valores_datos_pig">
                    <TextView android:id="@+id/tv_prom_naci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"/>
                    <TextView android:id="@+id/tv_prom_celos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"/>
                    <TextView android:id="@+id/tv_prom_gest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 unidades"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="15dp"/>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>