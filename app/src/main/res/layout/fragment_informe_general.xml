<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.InformeGeneralFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout android:id="@+id/rl_pig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:paddingTop="20sp">

            <ImageView android:id="@+id/iv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"/>

            <TextView android:id="@+id/title_datos_porcino"
                android:layout_toRightOf="@id/iv_home"
                android:layout_alignBottom="@id/iv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos porcinos"
                android:layout_marginLeft="10sp"
                android:textSize="28sp"/>

            <LinearLayout android:id="@+id/ll_title_datos_pig"
                android:layout_toRightOf="@id/iv_home"
                android:layout_alignLeft="@id/title_datos_porcino"
                android:layout_below="@id/title_datos_porcino"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total cerdos"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total machos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total hembras"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machos rpd"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hembras rpd"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_valores_datos_pig"
                android:layout_toRightOf="@id/ll_title_datos_pig"
                android:layout_below="@id/title_datos_porcino"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>


            <ImageView android:id="@+id/iv_etapa_pig"
                android:layout_below="@+id/ll_title_datos_pig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:layout_marginTop="20sp"/>

            <TextView android:id="@+id/title_etapas_pig"
                android:layout_toRightOf="@id/iv_etapa_pig"
                android:layout_alignBottom="@id/iv_etapa_pig"
                android:layout_alignLeft="@id/ll_title_datos_pig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etapas porcinas"
                android:textSize="28sp"/>

            <LinearLayout android:id="@+id/ll_title_etapas_pig"
                android:layout_toRightOf="@id/iv_etapa_pig"
                android:layout_alignLeft="@id/title_etapas_pig"
                android:layout_below="@id/title_etapas_pig"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lechones"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marranos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_valores_etapas_pig"
                android:layout_toRightOf="@id/ll_title_etapas_pig"
                android:layout_below="@id/title_etapas_pig"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignLeft="@id/ll_valores_datos_pig">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"
                    android:layout_marginTop="10sp"/>

            </LinearLayout>

            <ImageView android:id="@+id/iv_birth"
                android:layout_below="@+id/ll_title_etapas_pig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:layout_marginTop="20sp"/>

            <TextView android:id="@+id/title_birth"
                android:layout_toRightOf="@id/iv_birth"
                android:layout_alignBottom="@id/iv_birth"
                android:layout_alignLeft="@id/ll_title_etapas_pig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fertilidad"
                android:textSize="28sp"/>

            <LinearLayout android:id="@+id/ll_title_birth"
                android:layout_toRightOf="@id/iv_birth"
                android:layout_alignLeft="@id/title_birth"
                android:layout_below="@id/title_birth"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LechonePars"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marranos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_valores_birth"
                android:layout_toRightOf="@id/ll_title_etapas_pig"
                android:layout_below="@id/title_etapas_pig"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignLeft="@id/ll_valores_datos_pig">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textSize="16sp"
                    android:layout_marginTop="10sp"/>

            </LinearLayout>


        </RelativeLayout>


        <Button
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/bt_generar_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generar PDF"
            android:background="@drawable/custom_button"/>

    </LinearLayout>


</FrameLayout>