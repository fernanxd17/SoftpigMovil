<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_article"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    android:background="#53292929">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/imagenArticle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/herramientas_modificado"
            android:scaleType="centerCrop"
            android:layout_gravity="center">
        </ImageView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/tv_nameArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_article"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_cardview"
            android:layout_weight="0.8"
            android:paddingLeft="@dimen/activity_horizontal_margin">
        </TextView>
        <TextView
            android:id="@+id/tv_totalarticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/totalarticle"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_cardview"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/tv_typearticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_article"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_cardview"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_idArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idAriticle"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_cardview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin">

            </TextView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    android:layout_gravity="right"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="200dp"
                    android:layout_marginBottom="10dp">
                </ImageView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>