<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_codigo_exam_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codigo:"/>

            <TextView android:id="@+id/tv_valor_code_male_exam"
                android:layout_toRightOf="@id/tv_codigo_exam_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_name_exam_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Examen:"/>

            <TextView android:id="@+id/tv_valor_name_male_exam"
                android:layout_toRightOf="@id/tv_name_exam_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_date_exam_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha:"/>

            <TextView android:id="@+id/tv_valor_date_male_exam"
                android:layout_toRightOf="@id/tv_date_exam_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fecha"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tv_desc_exam_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n del examen:"
                android:layout_marginBottom="10sp"/>

            <TextView android:id="@+id/tv_valor_desc_male_exam"
                android:layout_below="@id/tv_desc_exam_male"
                android:layout_marginLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analisis de alteraciones o defectos en el pene, analisis despues de hacer sedacion con 12 azaperona (Stresnil)."/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">
            <TextView android:id="@+id/tv_result_exam_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado del Examen:"
                android:layout_marginBottom="10sp"/>

            <TextView android:id="@+id/tv_valor_result_male_exam"
                android:layout_below="@id/tv_result_exam_male"
                android:layout_marginLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El resultado fue satisfactorio"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>