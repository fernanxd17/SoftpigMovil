<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_female"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    android:background="#53292929">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cardview">
        <ImageView
            android:id="@+id/imagenFemale"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_cardview"
            android:background="@drawable/female_mo"
            android:scaleType="centerCrop">
        </ImageView>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_idFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idFemale"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:paddingHorizontal="@dimen/padding_cardview"
        android:paddingBottom="@dimen/padding_cardview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/nulipara"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nulipara:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_cardview">
            </TextView>
            <TextView
                android:id="@+id/tv_nulipara"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/nulipara"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_cardview">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/pesoFemale"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Peso:"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_cardview">
            </TextView>
            <TextView
                android:id="@+id/tv_pesoFemale"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/pesoFemale"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_cardview">
            </TextView>

        </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="1">
               <TextView
                   android:id="@+id/gestation"
                   android:layout_weight="0.5"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="GestaciÃ³n: "
                   android:textColor="@android:color/white"
                   android:textSize="@dimen/textSize_cardview">

               </TextView>
               <TextView
                   android:id="@+id/tv_gestation"
                   android:layout_weight="0.5"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/gestacion"
                   android:textColor="@android:color/white"
                   android:textSize="@dimen/textSize_cardview">

               </TextView>
           </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>



