<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_below="@id/ll_home"
    android:id="@+id/cardview_installation"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    android:background="#53292929"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/imageninstallation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/instalacion"
        android:scaleType="centerCrop">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp">

        <LinearLayout
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_nameInstallation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_instalation"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/white"
                    android:layout_weight="0.9"
                    android:textSize="@dimen/textSize_cardview">
                </TextView>

                <TextView
                    android:id="@+id/tv_idInstallation"
                    android:layout_weight="0.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/idInstallation"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="end"
                    android:textSize="@dimen/textSize_cardview">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tipo:"
                    android:textColor="@android:color/white"
                    android:textSize="20dp">
                </TextView>

                <TextView
                    android:id="@+id/tv_typeInstallation"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/type_installation"
                    android:textColor="@android:color/white"
                    android:textSize="20dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Medidas:"
                    android:textColor="@android:color/white"
                    android:textSize="20dp">
                </TextView>

                <TextView
                    android:id="@+id/tv_measurements"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/medidas_installations"
                    android:textColor="@android:color/white"
                    android:textSize="20dp">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>




