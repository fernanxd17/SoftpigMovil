<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_employee"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    android:background="#53292929">
    <ImageView
        android:id="@+id/imagenEmployee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cardview"
        android:background="@drawable/employee_modificado"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:id="@+id/idEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idEmpleado"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_cardview"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/primaryColorTrans"
        android:padding="5dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:paddingLeft="@dimen/padding_cardview"
        android:paddingBottom="@dimen/padding_cardview">

        <TextView
            android:id="@+id/nameEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameEmployee"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize_cardview">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/typeEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_employee"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_cardview">
            </TextView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/male"
                    android:layout_marginLeft="20dp">

                </ImageView>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>



