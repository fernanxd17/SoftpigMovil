<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_heat"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    cardview:cardBackgroundColor="#60E4E2E2"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    cardview:cardElevation="0dp"
    cardview:cardUseCompatPadding="true">


    <LinearLayout android:id="@+id/ll_cardview_heat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:paddingHorizontal="@dimen/padding_cardview"
        android:paddingBottom="@dimen/padding_cardview">

        <TextView
            android:id="@+id/tv_idHeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idHeat"
            android:textSize="20dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/type"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tipo de reproducción: "
                android:textSize="@dimen/textSize_cardview">
            </TextView>
            <TextView
                android:id="@+id/tv_type"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/typeMating"
                android:textSize="@dimen/textSize_cardview">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/sincrony"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="¿Sincronia?"
                android:textSize="@dimen/textSize_cardview">
            </TextView>
            <TextView
                android:id="@+id/tv_sincrony"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sincrony"
                android:textSize="@dimen/textSize_cardview">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/date_start"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fecha inicio:"
                android:textSize="@dimen/textSize_cardview">

            </TextView>
            <TextView
                android:id="@+id/tv_date_start"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dateStart"
                android:textSize="@dimen/textSize_cardview">

            </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/date_end"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha fin: "
            android:textSize="@dimen/textSize_cardview">

        </TextView>
        <TextView
            android:id="@+id/tv_date_end"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dateEnd"
            android:textSize="@dimen/textSize_cardview">

        </TextView>
    </LinearLayout>b

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>