<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/fragment_female">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <RelativeLayout
            android:id="@+id/rl_info_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_title_info_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="INFORMACIÓN REPRODUCTORA" />

        <LinearLayout
            android:id="@+id/ll_date_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_info_female"
            android:layout_alignParentLeft="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_id_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:" />

            <TextView
                android:id="@+id/tv_state_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:" />

            <TextView
                android:id="@+id/tv_installation_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instalación:" />

            <TextView
                android:id="@+id/tv_nulipara_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nulipara:" />

            <TextView
                android:id="@+id/tv_gestation_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestación:" />

            <TextView
                android:id="@+id/tv_peso_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso:" />

            <TextView
                android:id="@+id/tv_raza_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza:" />

            <TextView
                android:id="@+id/tv_salud_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salud:" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_valores_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_info_female"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/ll_date_female"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_valor_id_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01" />

            <TextView
                android:id="@+id/tv_valor_state_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vivo" />

            <TextView
                android:id="@+id/tv_valor_installation_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre (IDInst)" />

            <TextView
                android:id="@+id/tv_valor_nulipara_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si" />

            <TextView
                android:id="@+id/tv_valor_gestation_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si" />

            <TextView
                android:id="@+id/tv_valor_peso_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48 Kg" />

            <TextView
                android:id="@+id/tv_valor_raza_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duroc" />

            <TextView
                android:id="@+id/tv_valor_salud_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sano" />
        </LinearLayout>
    </RelativeLayout>

            <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/ll_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.8">

            <LinearLayout android:id="@+id/ll_heats_female"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/border_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Periodos de celo"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="center_horizontal">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="10dp">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/iv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_heat"
                            android:layout_gravity="center">
                        </ImageView>
                    </RelativeLayout>

                    <LinearLayout
                        android:paddingTop="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="0.8">

                        <TextView
                            android:id="@+id/tv_num_heats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Celos en el año: 8"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="left">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_gestation"
                android:layout_below="@id/ll_empleyees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/border_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Periodos de gestación"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="left">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/iv_instalations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_room"
                            android:layout_gravity="center">
                        </ImageView>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_weight="0.8"
                        android:paddingTop="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:id="@+id/tv_num_installations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cantidad de gestaciones en el año: 8"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="left">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:id="@+id/ll_tools_dashboard"
                android:layout_below="@id/ll_installations_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/border_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_num_tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partos"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="left">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">
                        <ImageView
                            android:id="@+id/iv_tools"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_birth"
                            android:layout_centerInParent="true">
                        </ImageView>
                    </RelativeLayout>


                    <LinearLayout
                        android:paddingTop="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:id="@+id/tv_num_tools_disponibles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Porcentaje hijos vivos: 70 %"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="left">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_num_tools_prestamo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promedio de hijos: 13"
                            android:layout_gravity="left"
                            android:layout_marginBottom="20dp">
                        </TextView>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bt_desasignar_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    android:text="Des-asignar\nReproductora"
                    android:background="@drawable/custom_button"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>