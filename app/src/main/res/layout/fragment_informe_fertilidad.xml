<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.InformeFertilidadFragment"
    android:background="@drawable/fertility_report">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <RelativeLayout android:id="@+id/rl_birth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20sp"
                android:paddingTop="20sp">

                <ImageView android:id="@+id/iv_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/birth"/>

                <TextView android:id="@+id/title_promedio_partos"
                    android:layout_toRightOf="@id/iv_birth"
                    android:layout_alignBottom="@id/iv_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promedio de partos"
                    android:layout_marginLeft="10sp"
                    android:textSize="30sp"/>

                <LinearLayout android:id="@+id/ll_title_promedio_partos"
                    android:layout_toRightOf="@id/iv_birth"
                    android:layout_alignLeft="@id/title_promedio_partos"
                    android:layout_below="@id/title_promedio_partos"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En hembras"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En machos"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>

                    <TextView android:id="@+id/tv_graf_prom_partos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver grafica"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_button"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <LinearLayout android:id="@+id/ll_valores_datos_pig"
                    android:layout_toRightOf="@id/ll_title_promedio_partos"
                    android:layout_below="@id/title_promedio_partos"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView android:id="@+id/tv_prom_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"/>
                    <TextView android:id="@+id/tv_prom_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


                <ImageView android:id="@+id/iv_info_birth"
                    android:layout_below="@+id/ll_title_promedio_partos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_birth"
                    android:layout_marginTop="20sp"/>

                <TextView android:id="@+id/title_info_birth"
                    android:layout_toRightOf="@id/iv_info_birth"
                    android:layout_alignBottom="@id/iv_info_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="InformaciÃ³n de partos"
                    android:textSize="24sp"/>

                <LinearLayout android:id="@+id/ll_title_etapas_pig"
                    android:layout_toRightOf="@id/iv_info_birth"
                    android:layout_alignLeft="@id/title_info_birth"
                    android:layout_below="@id/title_info_birth"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bebes"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muertes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Momias"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"/>

                    <TextView android:id="@+id/tv_graf_info_births"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver grafica"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/custom_button"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/ll_valores_etapas_pig"
                    android:layout_marginLeft="20sp"
                    android:layout_toRightOf="@id/ll_title_etapas_pig"
                    android:layout_below="@id/title_info_birth"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignLeft="@id/ll_valores_datos_pig">
                    <TextView android:id="@+id/tv_babies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"/>
                    <TextView android:id="@+id/tv_mommy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"/>
                    <TextView android:id="@+id/tv_dead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginTop="10sp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>