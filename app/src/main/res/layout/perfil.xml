<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_dash_board"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".View.fragment.DashBoard.DashBoardFragment">


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/ll_info_person"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:background="#90E4E2E2">

            <LinearLayout
                android:id="@+id/ll_title_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_title_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN PERSONAL"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:paddingTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Juan Fernando Romero Ortega"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_num_identification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C.C 1.090.502.664"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hombre"
                        android:layout_marginBottom="5dp">
                    </TextView>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/iv_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_supervisor_account"
                        android:layout_gravity="center">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_empleyees"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:background="#90E4E2E2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN EMPRESARIAL"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="15dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:paddingTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:id="@+id/tv_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rol"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_contract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contrato"
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salario"
                        android:layout_marginBottom="5dp">
                    </TextView>

                    <TextView
                        android:id="@+id/tv_installation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Dependencia"></TextView>
                    <TextView
                        android:id="@+id/tv_date_admission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingreso: "
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_date_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salida: "
                        android:layout_marginBottom="5dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_assigned_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver articulos asignados"
                        android:layout_marginBottom="5dp">
                    </TextView>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/iv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_supervisor_account"
                        android:layout_gravity="center">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/ll_empleyees"
            android:id="@+id/ll_installations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:background="#90E4E2E2"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN DE CONTACTO"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_weight="0.8"
                    android:paddingTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="juanfernandoro@ufps.edu.co"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="left">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_num_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Telefono: 5 475869">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_num_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Movil: 300 371 9983"
                        android:layout_marginBottom="5dp">
                    </TextView>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/iv_instalations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_room"
                        android:layout_gravity="center">
                    </ImageView>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btt_disable"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INHABILITAR"
            android:paddingHorizontal="20dp"
            android:background="@color/secondaryColor"
            android:layout_gravity="center">
        </Button>

    </LinearLayout>




</LinearLayout>